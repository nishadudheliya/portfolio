<%- include ("partials/header") -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel='stylesheet' href='/stylesheets/style.css' />   
    <style>
        .center {
            text-align:center;
            width:100%;
            align-items: center;
            display: flex;
            justify-content: center;
        }
        .align {
            align-items: center;
        }
        .container {
            max-width: 800px;
            background: #fff;
            width: 800px;
            padding: 25px 40px 10px 40px;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        }
        .container .text{
        text-align: center;
        font-size: 35px;
        font-weight: 600;
        }
.container form{
  padding: 15px 0;
}
.container form table tr{
  display: flex;
  margin: 32px 0;
}
.container form table tr td{
  width: 100%;

  margin: 0 20px;
  position: relative;
}
.button {
    box-sizing: border-box;
    position: relative;
    min-width: 64px;
    line-height: 36px;
    padding: 0 16px;
    border-radius: 4px;
    color: #000000de;
    background-color: #fff;
    text-align: center;
    border: none;
    transform: translate3d(0, 0, 0);
    border-color: #fafafa;
    box-shadow: 0 3px 1px -2px #0003, 0 2px 2px #00000024, 0 1px 5px #0000001f;
}
</style>
</head>
<body>
    <div class="container">
        <div>
        <h1 class="text">Contact me</h1>
        <form name="form1" method="GET" action="/">
        <table class="center">
           <tr>
                <td>First Name</td>
                <td><input type="text" name="fname" required></td>
            </tr>
            <tr>
                <td>Last Name</td>
                <td><input type="text" name="lname" required></td>
            </tr>
         
            <tr>
                <td>Contact Number</td>
                <td><input type="number" name="contact" required ></td>
            </tr>
            <tr>
                <td>Email</td>
                <td><input type="email" name="email" required></td>
            </tr>
            <tr>
                <td>Message</td>
                <td><textarea rows="4" cols="23" wrap="hard" required></textarea></td>
            </tr>
            <tr>
            <td class="center" colspan="2"><input class="button" type="submit" value=" Send " ></td>
            </tr>
            </table>
        </form>   
    </div>
    </div>
</body>
<%- include ("partials/footer") -%>